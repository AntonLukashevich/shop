<div>
    <strong>Название:</strong>
    <%= @product.title %>
</div>
<% @product.product_attrs.each do |attrv| %>
<div>
    <%= attrv.title %>:
    <u>
        <%= attrv.value %></u>
</div>
<% end %>
<br>

<% if current_user.admin %>
<div class="add_attr">
    <strong>Добавить новую характеристику:</strong>
    <%= form_with(model: [ @product, @product.product_attrs.build ], local: true) do |form| %>
    <div class="form-group">
        <strong>
            <%= form.label :Название%></strong><br>
        <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <strong>
            <%= form.label :Значение %></strong><br>
        <%= form.text_field :value, class: 'form-control' %>
    </div><br>
    <div class="form-group">
        <%= form.submit 'Добавить', class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>
<% end %>
<br>
<%= link_to 'Назад', home_path, class: 'btn btn-outline-secondary' %>