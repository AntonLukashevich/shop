<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(минимальное количество символов: <%= @minimum_password_length %> )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Подтверждение пароля' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <hr color="#DCDCDC">
  
  <div class="form-group">
    <%= f.label 'Имя Фамилия' %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label 'Роль' %>
    <%= f.collection_select :role_id, Role.order(:title), :id,:title, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label 'Адрес' %>
    <%= f.text_field :address_id, class: "form-control"%>
  </div>
  <hr color="#DCDCDC">
  <div class="actions form-group">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    <%= link_to 'Назад', home_path, class: 'btn btn-outline-secondary' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
