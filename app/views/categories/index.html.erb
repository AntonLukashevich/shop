<%= link_to 'Новая категория', new_category_path, class: 'btn btn-success' %>
<h1 padding="1em">Список всех категорий товаров</h1>
<table>
    <div>ID         Название    Статус</div>
    <% @categories.each do |category| %>
    <tr class="list">
        <td>
            <%= category.id %>:
        </td>
        <td>
            <%= category.title %>
        </td>
        <td>
          <%= category.status%>
        </td>
        <td>
            <%= link_to 'Изменить', edit_category_path(category), class: "btn btn-secondary btn-sm" %>
        </td>
        <td>
            <%= link_to 'Удалить', category_path(category),class: "btn btn-secondary btn-sm",
              method: :delete,
              data: { confirm: 'Хотите удалить?' } %>
        </td>
    </tr>
    <% end %>
</table>