    <h2>Новинки: </h2>
    <% @products.each do |product| %>
    <tr>
        <td>
            <article class="post">
                <h2>
                    <%= link_to product.title, product_path(product) %>
                </h2>
                <small>
                    <time>
                        <%= product.created_at.to_date.strftime("%d %B, %Y") %></time>
                        | <%= Category.where(:id => product.category_id).pluck(:title).first%>
                </small>
            </article>
        </td>
    </tr>
    <br>
    <% end %>







